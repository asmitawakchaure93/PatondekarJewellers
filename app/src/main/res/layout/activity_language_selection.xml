<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="@drawable/splash_gradient_color"
                                              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/line"/>
    </RelativeLayout>

    <com.patondekarjewellers.custom_views.CustomTextViewRegular
        style="@style/MediumWhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_120sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/please_select_language"/>

    <com.patondekarjewellers.custom_views.CustomTextViewRegular
        android:id="@+id/tvEnglish"
        style="@style/MediumWhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/white_corners"
        android:gravity="center"
        android:text="English"/>

    <com.patondekarjewellers.custom_views.CustomTextViewRegular
        android:id="@+id/tvMarathi"
        style="@style/MediumWhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/white_corners"
        android:gravity="center"
        android:text="मराठी"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/line"/>
    </RelativeLayout>


</android.support.v7.widget.LinearLayoutCompat>


