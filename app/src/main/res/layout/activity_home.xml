<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/cvGoldRates"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_150sdp"
                                            android:layout_margin="@dimen/_10sdp"
                                            card_view:cardCornerRadius="5dp"
                                            card_view:cardElevation="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/goldbar"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    android:src="@color/colorTransperentBlack"/>

                <com.patondekarjewellers.custom_views.CustomTextViewBold
                    style="@style/MediumWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latest_gold_rates"/>

            </FrameLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/cvSilverRates"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_150sdp"
                                            android:layout_margin="@dimen/_10sdp"
                                            card_view:cardCornerRadius="5dp"
                                            card_view:cardElevation="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/silverbar"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    android:src="@color/colorTransperentBlack"/>

                <com.patondekarjewellers.custom_views.CustomTextViewBold
                    style="@style/MediumWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latest_silver_rates"/>

            </FrameLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/cvDollarRates"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_150sdp"
                                            android:layout_margin="@dimen/_10sdp"
                                            card_view:cardCornerRadius="5dp"
                                            card_view:cardElevation="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dollar"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    android:src="@color/colorTransperentBlack"/>

                <com.patondekarjewellers.custom_views.CustomTextViewBold
                    style="@style/MediumWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latest_dollar_rates"/>

            </FrameLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>
